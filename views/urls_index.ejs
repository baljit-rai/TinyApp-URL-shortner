<!DOCTYPE html>
<html lang="en">
<head>
  <%include ./partials/head.ejs%>
<style>
body {
  background-image: url("http://38.media.tumblr.com/ca96fc9d1fb99e7827ef1f417b4c81e9/tumblr_nly2xj1cPv1ra8swxo1_540.gif");
  background-size: cover;
}
</style>
</head>
<body class="container">
  <header>
  <%include ./partials/headers.ejs%>
  </header>
  <main>

    <div class="row">
      <div class="col-sm-3">
        <div style="background:transparent" class="jumbotron">
          <% if(user_id !== undefined){ %>
            <h5><strong> Logged In:</strong> <%= user_id %></h5>
              <form action="/logout" method="POST" style="margin:10px;">
                <button style="background:#edd6ff" type="submit" value="Submit" class="btn btn-outline-primary">◕︵◕) Logout (◕︵◕)</button>
              </form>
            <% } %>

        </div>
      </div>

      <div class="col-sm-9">

        <div style="background:transparent" class="jumbotron"><h1>
        <strong> ᵔᴥᵔ ity bity URLs ᵔᴥᵔ</strong></h1>
          <ul>
            <%for(var key in urls) {%>
           <strong><a href=<%= urls[key].fullURL %>><%= key %></a> <%= ' ☜-(ΘLΘ)-☞ ' + urls[key].fullURL%></strong>
           <br>
           <% if(user_id !== undefined){ %>
            <form method="POST" action=<%= "/urls/" + key + "/delete"%>>
            <button style="background:#ffddd5" class="btn btn-outline-primary" style="vertical-align:middle"><span>Delete (ノಠ益ಠ)ノ彡┻━┻</span></button>
            </form>
            <form method="POST" action=<%= "/urls/" + key%>>
            <button style="background:#d5f7ff " class="btn btn-outline-primary" style="vertical-align: middle"><span>Edit (ﾉ◕ヮ◕)ﾉ*:･ﾟ✧</span></button>
            </form>
            <br>
            <%} };%>
          </ul>
          <h4><a><a href = "http://localhost:8080/urls/new"> 💇trim splitends💇</a></h4>
      </div>

  <footer>
  </footer>
</body>
</html>



