<!DOCTYPE html>
<html lang="en">
<head>
  <%include ./partials/head.ejs%>
</head>
<body class="container">
  <header>
  <%include ./partials/headers.ejs%>
  </header>
  <main>
    <div class="row">
      <div class="col-sm-4">
        <div class="well">
          <% if(username !== undefined){ %>
            <h5>Your username is: <%= username %></h5>
              <form action="/logout" method="POST" style="margin:10px;">
                <button type="submit" value="Submit" class="btn btn-outline-primary">Logout ✌️</button>
              </form>
            <% } else{ %>
              <form action="/login" method="POST" style="margin:10px;">
                <label for="username">Login:</label>
                <input id="username" type="text" name="username" placeholder="username" style="width: 200px">
                <button type="submit" value="Submit"class="btn btn-outline-primary">Enter</button>
              </form>
            <% } %>
        </div>
      </div>


      <div class="col-sm-8">
        <div style="background:#d5ffdd" class="jumbotron"><h1>
        <strong>ᕙ(⇀‸↼‶)ᕗ Choppin Them URLs Like Karate</strong></h1>

        <body style="font-size:20px; padding:50px;">
          <form action="/urls" method="POST" style="margin:150px;">
            <label for="longURL">Enter a URL:</label>
            <input class="searchBar" id="longURL" type="text" name="longURL" placeholder="http://" style="width: 300px">
            <button class="button" style="vertical-align:middle"><span>Submit</span></button>
          </form>
        </body>
         <h4><a><a href = "http://localhost:8080/urls/new"> 💇trim splitends💇</a></h4>
        </div>
      </div>
    </div>
  </main>

  <footer>
  </footer>
</body>